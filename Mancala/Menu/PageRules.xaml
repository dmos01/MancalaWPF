<Page x:Class="Mancala.Menu.PageRules"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mancala"
      mc:Ignorable="d" 
      Background="White"
      Title="PageRules">

    <DockPanel MinWidth="390" MinHeight="200" LastChildFill="True">
        <StackPanel DockPanel.Dock="Top">
            <Label FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" Content="Rules" />
            <Label x:Name="lblVersionNumber" HorizontalAlignment="Right" Content="Version 1.0.0" MouseDown="lblVersionNumber_OnMouseDown"/>
        </StackPanel>
        <TextBox x:Name="txtReadOnlyRules" IsReadOnly="True" IsReadOnlyCaretVisible="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" FontSize="13"/>
    </DockPanel>
</Page>
